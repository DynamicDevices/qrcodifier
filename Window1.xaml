<Window x:Class="Barcode.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DoES QRCodifier" Height="800" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*"/>
<!--            <RowDefinition Height="*"/> -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="PrintersComboBox" DisplayMemberPath="Name"></ComboBox>
        <TextBox x:Name="QRCodeURI" TextChanged="CalculateQRCode">http://wiki.doesliverpool.com</TextBox>
        <Image x:Name="QRCodeImage" Grid.Row="1"></Image>
<!--        <Button x:Name="PrintBarcodeButton" Grid.Row="2" Click="PrintBarcodeButton_Click">Print Barcode</Button> -->
        <Button x:Name="PrintBarcodeAsImageButton" Grid.Row="3" Click="PrintBarcodeAsImageButton_Click">Print Q/R Code</Button>
    </Grid>
</Window>
